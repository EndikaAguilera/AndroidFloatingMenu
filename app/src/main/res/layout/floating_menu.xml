<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/menu_frame_layout"
    style="@style/FloatingMenuFrameLayout"
    tools:ignore="Overdraw">

    <android.support.v7.widget.CardView
        android:id="@+id/menu_card_view"
        style="@style/FloatingMenuCardView">

        <LinearLayout
            android:id="@+id/menu_linear_layout_container"
            style="@style/FloatingMenuLinearLayout">

            <TextView
                android:id="@+id/floating_menu_header_text_view"
                style="@style/FloatingMenuHeader" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/floating_menu_recycler_view"
                style="@style/FloatingMenuRecyclerView"
                android:orientation="horizontal"
                tools:visibility="visible" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
